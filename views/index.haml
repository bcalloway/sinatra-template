%h1
  Users

#button
  %a{:href => "/new"} Add New User
          
%table{:class => 'table'}
  %tr
    %th
      User Name
    %th
    %th

  - for user in @user    
    %tr
      %td
        %a{:href => "/#{user.id}"}= user.name
      %td
        %form{:method => "get", :action => "/edit/#{user.id}", :id => 'delete'}
          %input{:type => "submit", :value => "Edit"}
      %td
        %form{:method => "post", :action => "/users/", :id => 'delete'}
          %input{:type => "hidden", :name => "_method", :value => "delete"}
          %input{:type => "hidden", :name => "id", :value => "#{user.id}"}
          %input{:type => "submit", :value => "Delete", :onclick =>  "javascript:return confirm('Are you sure you want to delete this item?')"}